{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020", "dom"],
    "outDir": "bin",
    "module": "esnext",
    "importHelpers": true,
    "removeComments": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types/"],
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["src/*"]
  }
}
