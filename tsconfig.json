{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "outDir": "bin",
    "module": "esnext",
    "importHelpers": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceRoot": "./src",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types/", "types"],
    "types": ["node"],
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "**/*.js"],
  "exclude": ["node_modules"]
}
