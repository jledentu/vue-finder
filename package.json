{
  "name": "vue-finder",
  "description": "A Vue.js 2.0 library project",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/vue-finder.common.js",
  "module": "dist/vue-finder.esm.js",
  "unpkg": "dist/vue-finder.js",
  "jsdelivr": "dist/vue-finder.js",
  "files": [
    "src",
    "dist/*.js"
  ],
  "author": "Jérémie Ledentu <jledentu@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jledentu/vue-finder.git"
  },
  "bugs": {
    "url": "https://github.com/jledentu/vue-finder/issues"
  },
  "homepage": "https://github.com/jledentu/vue-finder#readme",
  "keywords": [
    "vue",
    "vue-component",
    "vue-library"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "build": "npm run build:cjs && yarn run build:es && yarn run build:umd:dev && yarn run build:umd:prod",
    "build:cjs": "rollup -c --environment TARGET:cjs",
    "build:es": "rollup -c --environment TARGET:esm",
    "build:umd:dev": "rollup -c --environment TARGET:umd-dev",
    "build:umd:prod": "rollup -c --environment TARGET:umd-prod",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o docs/dist/stories",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "npm run lint && jest --verbose --coverage",
    "test:update": "jest --verbose --updateSnapshot",
    "test:watch": "jest --verbose --watchAll --notify",
    "lint": "eslint --ext .js,.vue .",
    "lint:fix": "eslint --ext .js,.vue . --fix",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@storybook/vue": "^5.0.1",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.0.0-beta.2",
    "@vue/babel-preset-jsx": "^1.0.0-beta.2",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-vue-jsx": "^3.5.1",
    "babel-preset-vue": "^2.0.2",
    "commitizen": "^3.0.7",
    "css-loader": "^2.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "jest-serializer-html": "^6.0.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-vue-preprocessor": "^1.5.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "prettier": "^1.9.2",
    "rollup": "^1.6.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-vue": "^5.0.0",
    "sass-loader": "^7.1.0",
    "semantic-release": "^15.13.3",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "uglify-es": "^3.3.4",
    "vue": "^2.5.13",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^4.29.6"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
